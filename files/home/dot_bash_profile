PATH=$PATH:$HOME/micromamba/bin:$HOME/.local/bin
if [ -d /opt/homebrew/bin ]; then
  PATH=$PATH:/opt/homebrew/bin
fi

[[ $- != *i* ]] && return

# >>> mamba initialize >>>
# !! Contents within this block are managed by 'micromamba shell init' !!
# export MAMBA_EXE='/opt/homebrew/condabin/micromamba';
# export MAMBA_ROOT_PREFIX='/Users/jiwan/micromamba';
export MAMBA_EXE=$(which micromamba);
export MAMBA_ROOT_PREFIX="$HOME/micromamba";
__mamba_setup="$("$MAMBA_EXE" shell hook --shell bash --root-prefix "$MAMBA_ROOT_PREFIX" 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__mamba_setup"
else
    alias micromamba="$MAMBA_EXE"  # Fallback on help from micromamba activate
fi
unset __mamba_setup
# <<< mamba initialize <<<

if [ -x "$HOME/bin/keepalive.sh" ]; then
    echo "running keepalive"
    "$HOME/bin/keepalive.sh" ensure "/scratch2/jiwan_chung" "@weekly"
fi

# micromamba activate base
fish
